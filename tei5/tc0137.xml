      <front>
         <castList>
            <head>PERSONNAGES</head>
            <castItem>
               <role xml:id="tc0137-MAITRESSEMOKA">MAÎTRESSE MOKA</role>
            </castItem>
            <castItem>
               <role xml:id="tc0137-MONSIEURDUVAL">MONSIEUR DUVAL</role>
            </castItem>
            <castItem>
               <role xml:id="tc0137-MONSIEURDELALANDE">MONSIEUR DELALANDE</role>
