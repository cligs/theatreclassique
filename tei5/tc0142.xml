      <front>
         <castList>
            <head>PERSONNAGES</head>
            <castItem>
               <role xml:id="tc0142-LeDUC">Le DUC</role>
            </castItem>
            <castItem>
               <role xml:id="tc0142-MonsieurRONFLANT">Monsieur RONFLANT</role>
            </castItem>
            <castItem>
               <role xml:id="tc0142-MonsieurDECOUSU">Monsieur DÉCOUSU</role>
            </castItem>
            <castItem>
               <role xml:id="tc0142-DUPRE">DUPRÉ</role>
            </castItem>
         </castList>
         <set>
            <p>La scène est dans le cabinet du Duc.</p>
         </set>
